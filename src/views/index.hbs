<div class="row">
    <div class="col-md4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write the message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+01414200394" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block"> SEND </button>
        </form>
    </div>
    <div class="col md-8">
        {{#if messages}}
            {{#each messages}}
            <div class="card card-body">
                <p>{{Body}}</p>
                <span>{{hideNumber To}}</span>
            </div>
            {{/each}}
        {{else}}
        <p>No messages yet</p>
        {{/if}}
    </div>
</div>